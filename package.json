{
  "name": "@synthatar/monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "dev:web": "pnpm --filter @synthatar/web dev",
    "dev:api": "pnpm --filter @synthatar/api dev",
    "build": "pnpm run --recursive build",
    "build:web": "pnpm --filter @synthatar/web build",
    "build:api": "pnpm --filter @synthatar/api build",
    "start:web": "pnpm --filter @synthatar/web start",
    "start:api": "pnpm --filter @synthatar/api start"
  },
  "devDependencies": {
    "typescript": "^5.7.3"
  },
  "packageManager": "pnpm@9.15.1"
}